generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @id @unique @default(cuid()) @db.VarChar(25)
  authId        String?     @unique
  name          String
  email         String      @unique
  collegeId     String?
  passYear      Int?
  district      String?
  dob           DateTime
  house         String?
  pin           Int?
  mentor        Boolean
  mobile        String?     @unique
  pronoun       String?
  street        String?
  discordActive Boolean     @default(false)
  discordUserId String?     @unique
  discordUserName String?   @unique
  description   Description
  college       College?    @relation(fields: [collegeId], references: [id])
  skills        Skill[]
  profileCreated  DateTime @default(now())
}

model College {
  id       String  @id @unique @default(dbgenerated("(gen_random_uuid())::text"))
  name     String  @unique
  location String?
  type     String?
  user     User[]
}

model Skill {
  id   String @id @unique @default(dbgenerated("(gen_random_uuid())::text"))
  name String @unique
  user User[]
}

enum Description {
  Student
  Professional
}
